{
  "name": "@benmvp/cli",
  "version": "0.0.0-semantically-released",
  "description": "A highly-opinionated, zero-config CLI for consistent infra for Ben Ilegbodu's Typescript-based libraries",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "jsnext:main": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "bin": {
    "benmvp": "bin/benmvp"
  },
  "files": [
    "/lib",
    "/bin"
  ],
  "repository": "https://github.com/benmvp/benmvp-cli.git",
  "author": "Ben Ilegbodu <ben@benmvp.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebootstrap": "rm -rf lib",
    "bootstrap": "babel src --out-dir lib/cjs --extensions '.ts,.js' --copy-files --presets ./src/commands/build/babel-config-cjs.js",
    "prestart": "yarn build",
    "start": "./bin/benmvp start",
    "pretest": "yarn build",
    "test": "./bin/benmvp test",
    "prebuild": "yarn bootstrap",
    "build": "./bin/benmvp build",
    "preintegrate": "yarn bootstrap",
    "integrate": "./bin/benmvp integrate"
  },
  "engines": {
    "node": ">= 8"
  },
  "dependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/runtime": "^7.4.5",
    "@types/jest": "^24.0.11",
    "@typescript-eslint/eslint-plugin": "^1.8.0",
    "@typescript-eslint/parser": "^1.7.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^24.8.0",
    "core-js": "^3.0.1",
    "eslint": "^5.14.0",
    "eslint-config-eventbrite": "^5.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.4.1",
    "fs-extra": "^8.0.1",
    "jest": "^24.8.0",
    "jest-runner-eslint": "^0.7.3",
    "jest-runner-tsc": "^1.3.2",
    "jest-watch-typeahead": "^0.3.0",
    "lodash": "^4.17.11",
    "rimraf": "^2.6.3",
    "tmp": "^0.1.0",
    "typescript": "^3.2.1",
    "yargs": "^13.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^7.0.0",
    "@types/lodash-es": "^4.17.1",
    "@types/node": "^12.0.0",
    "@types/tmp": "^0.1.0",
    "@types/typescript": "^2.0.0",
    "@types/yargs": "^13.0.0"
  }
}
